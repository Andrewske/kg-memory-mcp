{
	"name": "mcp-knowledge-graph",
	"version": "1.0.0",
	"description": "Knowledge Graph MCP Server - A standalone Model Context Protocol server for knowledge graph operations",
	"type": "module",
	"main": "src/index.ts",
	"bin": {
		"knowledge-graph-mcp": "src/index.ts"
	},
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"mcp": "tsx src/index.ts",
		"watch": "tsx watch src/index.ts",
		"server:inspect": "ENABLE_STDIO_TRANSPORT=true npx @modelcontextprotocol/inspector ./node_modules/.bin/tsx src/index.ts",
		"dev:http": "ENABLE_HTTP_TRANSPORT=true ENABLE_STDIO_TRANSPORT=false tsx src/index.ts",
		"dev:stdio": "ENABLE_STDIO_TRANSPORT=true ENABLE_HTTP_TRANSPORT=false tsx src/index.ts",
		"dev:dual": "ENABLE_HTTP_TRANSPORT=true ENABLE_STDIO_TRANSPORT=true tsx src/index.ts",
		"start:http": "ENABLE_HTTP_TRANSPORT=true ENABLE_STDIO_TRANSPORT=false node dist/index.js",
		"start:stdio": "ENABLE_STDIO_TRANSPORT=true ENABLE_HTTP_TRANSPORT=false node dist/index.js",
		"start:dual": "ENABLE_HTTP_TRANSPORT=true ENABLE_STDIO_TRANSPORT=true node dist/index.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:http": "node scripts/test-http-client.mjs",
		"test:mcp": "node scripts/test-client.mjs",
		"prepare": "npm run build",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write",
		"format:check": "biome format .",
		"dev:clean": "rm -rf dist && npm run build && npm run dev",
		"check": "biome check . && tsc --noEmit && jest --passWithNoTests",
		"db:push": "prisma db push",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:deploy": "prisma migrate deploy",
		"db:reset": "prisma migrate reset",
		"db:studio": "prisma studio",
		"db:seed": "tsx prisma/seed.ts",
		"postinstall": "prisma generate"
	},
	"keywords": [
		"knowledge-graph",
		"mcp",
		"model-context-protocol",
		"ai",
		"semantic-search",
		"triple-extraction",
		"embeddings"
	],
	"author": "",
	"license": "MIT",
	"packageManager": "pnpm@10.13.1",
	"dependencies": {
		"@ai-sdk/anthropic": "^1.2.12",
		"@ai-sdk/openai": "^1.3.23",
		"@modelcontextprotocol/inspector": "^0.16.1",
		"@modelcontextprotocol/sdk": "^0.6.1",
		"@prisma/client": "^6.12.0",
		"@t3-oss/env-core": "^0.13.8",
		"@upstash/qstash": "^2.8.1",
		"ai": "^4.3.19",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^5.1.0",
		"helmet": "^8.1.0",
		"tailwindcss": "^4.1.11",
		"tiktoken": "^1.0.21",
		"uuid": "^11.1.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.14",
		"@types/node-fetch": "^2.6.12",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"@types/uuid": "^10.0.0",
		"jest": "^29.7.0",
		"node-fetch": "^3.3.2",
		"prisma": "^6.12.0",
		"ts-jest": "^29.1.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	}
}
