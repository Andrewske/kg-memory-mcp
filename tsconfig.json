{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022"],
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "src/api/**/*"],
	"exclude": ["node_modules", "dist", "prisma", ".ignore"],
	"tsc-alias": {
		"resolveFullPaths": true,
		"resolveFullExtension": ".js",
		"debug": false,
		"replacers": {
			"~/": "./",
			"~/*": "./*"
		},
		"fileExtensions": {
			".js": [".ts", ".tsx"],
			".jsx": [".tsx"]
		}
	}
	
}
