# Database
DATABASE_URL="postgresql://username:password@localhost:5432/knowledge_graph?schema=public"

# Optional: for development
NODE_ENV="development"

# Transport Configuration
ENABLE_STDIO_TRANSPORT="true"
ENABLE_HTTP_TRANSPORT="false"

# HTTP Transport Configuration
HTTP_PORT="3000"
HTTP_BASE_PATH="/api"
HTTP_CORS_ORIGINS="*"
HTTP_RATE_LIMIT_WINDOW="15"
HTTP_RATE_LIMIT_MAX="100"
HTTP_ENABLE_SSE="true"

# API Keys (required)
OPENAI_API_KEY="sk-your-openai-api-key"
# Optional: Alternative AI provider
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# Knowledge Graph Configuration (optional)
KG_EMBEDDING_MODEL="text-embedding-3-small"
KG_EMBEDDING_DIMENSIONS="1536"
KG_EXTRACTION_MODEL="gpt-4o-mini"
KG_AI_PROVIDER="openai"